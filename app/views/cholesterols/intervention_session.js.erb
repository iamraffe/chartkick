    updateData();

    // $('#intervention-data .modal-body .tab-conten').css('overflow', 'hidden');

    $('#intervention-data .form-animation-wrapper').addClass('bounceOutUp animated');

    var index = $('#intervention-data .form-animation-wrapper input[name=index]').val();

    updateInputs(index);

    $('#intervention-data .form-animation-wrapper').one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
      $(this).removeClass('bounceOutUp animated');
      bringBackDown();
    });
