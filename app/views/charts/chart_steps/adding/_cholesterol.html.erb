  <div class="row">
    <h2>Please add the cholesterol data for: <span class="patient-name"> <%= @chart.user.name %></span></h2>
    <h3>Make sure to include the date for each test.</h3>
  </div>

  <div class="row input-mode">
    <div class="copy-paste-mode">
      <button class="btn btn-success btn-sm pull-right activate-copy-paste">Activate copy paste mode</button>
      <h4 class="pull-right">Do you have the data handy?</h4>
    </div>
    <div class="manual-mode hide">
      <button class="btn btn-success btn-sm pull-right activate-copy-paste">Manual input mode</button>
      <h4 class="pull-right">Prefer to input the data yourself? Return to </h4>
    </div>
    <div class="start-over-mode hide">
      <button class="btn btn-danger btn-sm pull-right start-over" style="margin-left: 50px;">Start over</button>
      <button class="btn btn-info btn-sm pull-right clear-copy-paste">Clear pasted data</button>
      <!-- <h4 class="pull-right">Prefer to input the data yourself? Return to </h4> -->
    </div>
  </div>

  <div class="manual-input">
    <table class="table table-striped table-hover cholesterol-data">
      <thead>
        <tr>
          <th>#</th>
          <th>Date</th>
          <th>LDL</th>
          <th>HDL</th>
          <th>Triglycerides</th>
          <th>Cholesterol</th>
        </tr>
      </thead>
      <tbody>
        <% if @entries.blank? %>
          <% if session[:entry_params]['date'] %>
            <%= raw(construct_table_from_session_params(session[:entry_params], "Cholesterol")) %>
          <% else %>
            <% 5.times do |i| %>
              <tr>
                <td><span id="fa-<%= (i) %>" class="fa fa-times text-danger"></span><%= (i+1) %></td>
                <td><input type="date" name="entry[date[<%= (i+1) %>]]" class="session--input"></td>
                <td><input type="text" name="entry[ldl[<%= (i+1) %>]]" class="session--input"></td>
                <td><input type="text" name="entry[hdl[<%= (i+1) %>]]" class="session--input"></td>
                <td><input type="text" name="entry[triglycerides[<%= (i+1) %>]]" class="session--input"></td>
                <td><input type="text" name="entry[cholesterol[<%= (i+1) %>]]" class="session--input"></td>
              </tr>
            <% end %>
          <% end %>
        <% else %>
          <% if session[:entry_params]['date'] %>
            <%= raw(construct_table_from_database(@entries, "Cholesterol", false)) %>
            <%= raw(construct_table_from_session_params(session[:entry_params], "Cholesterol", @entries.size)) %>
          <% else %>
            <%= raw(construct_table_from_database(@entries, "Cholesterol", true)) %>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <button class="random btn btn-primary" style="margin-bottom: 25px;">Generate random numbers</button>
    <button class="add-row btn btn-primary pull-right" style="margin-bottom: 25px;">Add row</button>
  </div>

  <div class="copy-paste-input hide">
    <table class="table table-striped table-hover cholesterol-data" data-size="<%= @entries.nil? ? 0 : @entries.size %>">
      <thead>
        <tr>
          <th>#</th>
          <th>Date</th>
          <th>LDL</th>
          <th>HDL</th>
          <th>Triglycerides</th>
          <th>Cholesterol</th>
        </tr>
      </thead>
      <tbody>
        <% if !@entries.blank? %>
          <% if session[:entry_params]['date'] %>
            <%= raw(construct_table_from_database(@entries, "Cholesterol", false)) %>
            <%= raw(construct_table_from_session_params(session[:entry_params], "Cholesterol", @entries.size)) %>
          <% else %>
            <%= raw(construct_table_from_database(@entries, "Cholesterol", false)) %>
          <% end %>
        <% else %>
          <% if session[:entry_params]['date'] %>
            <%= raw(construct_table_from_session_params(session[:entry_params], "Cholesterol")) %>
          <% end %>
        <% end %>
      </tbody>
    </table>
