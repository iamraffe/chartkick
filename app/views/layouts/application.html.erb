function canSubmitForIntervention(){
  var canSubmit = true;
  canSubmit = $('.visible-intervention-form input.js--intervention--title').val() === '' ? false : canSubmit;
  $('.visible-intervention-form input[type=date]').each(function() {
     var element = $(this);
     if (element.val() == "") {
         canSubmit = false;
     }
  });
  return canSubmit;
}

